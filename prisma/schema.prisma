// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id            String       @id @default(cuid())
  email         String       @unique
  passwordHash  String       // bcrypt hashed password
  name          String?
  createdAt     DateTime     @default(now())
  updatedAt     DateTime     @updatedAt
  persona       String?      // "student" | "freelancer" | "general"
  monthlyFixedCosts Float?   // Optional monthly fixed costs
  riskTolerance String?      // Optional risk tolerance setting
  coachingGuidelines String?  // JSON string of coaching preferences: {style: string[], additional_notes: string}
  plaidItems    PlaidItem[]
  goals         Goal[]
}

model PlaidItem {
  id            String       @id @default(cuid())
  userId        String
  user          User         @relation(fields: [userId], references: [id], onDelete: Cascade)
  accessToken   String       @unique // Stored server-side only
  institutionId String
  institutionName String?
  createdAt     DateTime     @default(now())
  updatedAt     DateTime     @updatedAt
  lastSyncedAt  DateTime?
  transactions  Transaction[]
  recurringCharges RecurringCharge[]
  accounts      Account[]
  incomeSummaries IncomeSummary[]
}

model Account {
  id            String       @id @default(cuid())
  plaidItemId   String
  plaidItem     PlaidItem   @relation(fields: [plaidItemId], references: [id], onDelete: Cascade)
  plaidAccountId String     @unique // Plaid account_id
  name          String
  officialName  String?
  type          String       // "depository" | "credit" | "investment" | "loan"
  subtype       String?      // e.g., "checking", "savings", "credit card"
  mask          String?      // Last 4 digits
  balance       Float        // Current balance
  availableBalance Float?    // Available balance (for depository)
  limit         Float?       // Credit limit (for credit accounts)
  currencyCode  String?      // ISO currency code
  lastSyncedAt  DateTime?
  createdAt     DateTime     @default(now())
  updatedAt     DateTime     @updatedAt
  transactions  Transaction[]

  @@index([plaidItemId])
  @@index([type])
}

model Transaction {
  id            String       @id @default(cuid())
  plaidItemId   String
  plaidItem     PlaidItem   @relation(fields: [plaidItemId], references: [id], onDelete: Cascade)
  accountId     String?      // Reference to Account.id (not Plaid account_id)
  account       Account?     @relation(fields: [accountId], references: [id], onDelete: SetNull)
  plaidId       String       @unique // Plaid transaction ID
  plaidAccountId String?     // Plaid account_id (for reference)
  amount        Float        // Positive for income, negative for expenses
  date          DateTime
  name          String
  category      String?      // Normalized category
  merchantName  String?
  createdAt     DateTime     @default(now())
  updatedAt     DateTime     @updatedAt
  recurringChargeId String?
  recurringCharge RecurringCharge? @relation(fields: [recurringChargeId], references: [id])

  @@index([plaidItemId])
  @@index([date])
  @@index([category])
  @@index([accountId])
}

model RecurringCharge {
  id            String       @id @default(cuid())
  plaidItemId   String
  plaidItem     PlaidItem   @relation(fields: [plaidItemId], references: [id], onDelete: Cascade)
  name          String
  amount        Float
  frequency     String       // "monthly" | "weekly" | "yearly"
  confidence    Float        // 0.0 to 1.0
  status        String       @default("active") // "active" | "cancelled" | "unsure"
  createdAt     DateTime     @default(now())
  updatedAt     DateTime     @updatedAt
  transactions  Transaction[]

  @@index([plaidItemId])
}

model Goal {
  id            String       @id @default(cuid())
  userId        String
  user          User         @relation(fields: [userId], references: [id], onDelete: Cascade)
  name          String
  targetAmount  Float
  targetDate    DateTime
  createdAt     DateTime     @default(now())
  updatedAt     DateTime     @updatedAt
  insights      GoalInsight?

  @@index([userId])
}

model GoalInsight {
  id                    String       @id @default(cuid())
  goalId                String       @unique
  goal                  Goal         @relation(fields: [goalId], references: [id], onDelete: Cascade)
  summary               String
  topReasons            String       // JSON array of strings
  actionPlan            String       // JSON array of action plan items
  projectedCompletionDate String?    // ISO date string, only if goal is achievable
  createdAt             DateTime     @default(now())
  updatedAt             DateTime     @updatedAt

  @@index([goalId])
}

model IncomeSummary {
  id            String       @id @default(cuid())
  plaidItemId   String
  plaidItem     PlaidItem   @relation(fields: [plaidItemId], references: [id], onDelete: Cascade)
  bankIncomeId  String?      // Plaid bank_income_id
  startDate     DateTime
  endDate       DateTime
  totalAmount   Float
  currencyCode  String?
  incomeSourcesCount Int?
  incomeCategoriesCount Int?
  incomeTransactionsCount Int?
  generatedTime DateTime?
  lastUpdatedTime DateTime?
  createdAt     DateTime     @default(now())
  updatedAt     DateTime     @updatedAt

  @@index([plaidItemId])
  @@index([startDate, endDate])
}
